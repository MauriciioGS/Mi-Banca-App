<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen120dp"
    android:layout_margin="8dp"
    app:cardElevation="@dimen/dimen6dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/credit_card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/textCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/whiteTxt"
            android:text="Número de Tarjeta" />

        <TextView
            android:id="@+id/textExpirationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/whiteTxt"
            android:text="Fecha de Expiración" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>