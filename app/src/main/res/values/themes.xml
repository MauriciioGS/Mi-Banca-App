<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiBancaApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="button_accept_gral" parent="@style/Widget.Material3.Button">
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">@dimen/dimen100dp</item>
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="elevation">3dp</item>
    </style>

    <style name="button_secondary" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">@dimen/dimen1dp</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">@dimen/dimen100dp</item>
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <!--EditText-->
    <style name="EditTextInput" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">@dimen/dimen16sp</item>
    </style>
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">@dimen/dimen14sp</item>
    </style>

    <style name="EditTextGeneral" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textAppearance">@style/EditTextInput</item>
        <item name="hintTextAppearance">@style/EditTextHint</item>
    </style>

</resources>
